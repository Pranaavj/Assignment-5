#include <iostream>
using namespace std;

class BankAccount
    {
        public:
        string owner;
        double balance;
        void deposit(double amount)
        {
            balance=balance+amount;
            
        }
        void withdraw(double amount)
        {
            balance=balance-amount;
        }
    };
    class CheckingAccount:public BankAccount
    {
        public:
        
        double insufficientFundsFee;
        void processCheck(double checkAmount)
        {
            balance=balance+checkAmount;
            
        }
        void withdraw(double amount)
        {
            balance=balance-amount;
            if(balance<0)
            {
                balance=balance-insufficientFundsFee;
            }
        }
    };
    class SavingAccount:public BankAccount
    {public:
        double annualInterestRate;
        double monthlyInterestRate;
        double var1;
        void depositMonthlyInterest()
        {   monthlyInterestRate=annualInterestRate/12;
            balance=balance+monthlyInterestRate;
        }
        void withdraw(double amount)
        {
          var1=balance-amount;
          if(var1<0)
          {
             cout<<"Sorry,You do not have sufficient balance in your account";
              
          }
          else{
              balance=balance-amount;
          }
        }
        
    };
    int main() {
    SavingAccount sa,sa2;
    CheckingAccount ca;
    
    sa.owner="joe";  
    sa.balance=100;
    sa.annualInterestRate=1;
    
    ca.owner="Emily";
    ca.balance=200;
    ca.insufficientFundsFee=10;
    
    sa.withdraw(25);
    ca.processCheck(50);
    
    
    ca.withdraw(100);
    sa.deposit(100);
    
    
    sa2.owner="Sam";
    sa2.balance=250;//initial balance of sam account
    sa2.annualInterestRate=0.5;
    
    sa.depositMonthlyInterest();
    sa2.depositMonthlyInterest();
    
    ca.withdraw(500);
    sa.withdraw(500);
    
    return 0;
}
